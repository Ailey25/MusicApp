<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:padding="10dp">

        <ImageView android:id="@+id/song_list_artwork"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="#636363"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toEndOf="@+id/song_list_artwork"
            android:paddingLeft="15dp">

            <TextView android:id="@+id/song_list_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="7dp"
                android:text="@string/unknown_title" />

            <TextView android:id="@+id/song_list_artist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="7dp"
                android:text="@string/unknown_artist" />

        </LinearLayout>

        <ImageView android:id="@+id/song_list_more_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_more_options_light"
            android:visibility="gone"/>

    </RelativeLayout>

</RelativeLayout>